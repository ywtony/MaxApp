<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="298dp"
    android:layout_height="160dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="发现新版本"
        android:layout_marginTop="10dp"
        android:textColor="@color/t333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_tv_topline"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/dialog_tv_title"
        android:background="@color/tab_textcolor_blue"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/downLoadProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/dialog_tv_topline"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:progressDrawable="@drawable/progress_style_download" />

    <TextView
        android:id="@+id/dialog_tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_tv_buttomline"
        android:layout_below="@+id/downLoadProgress"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:text="内容"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_tv_buttomline"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_above="@+id/dialog_linear_noupdate"
        android:layout_centerHorizontal="true"
        android:background="@color/tab_textcolor_blue"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dialog_linear_noupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:weightSum="2"
        >

        <TextView
            android:id="@+id/dialog_tv_noupdate"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/dialog_tv_hline"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="暂不更新"
            android:background="@drawable/btn_bg"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dialog_tv_hline"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialog_tv_yesupdate"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/dialog_tv_noupdate"
            android:layout_centerHorizontal="true"
            android:background="@color/tab_textcolor_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_tv_yesupdate"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/dialog_tv_hline"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_bg"
            android:text="马上更新"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>