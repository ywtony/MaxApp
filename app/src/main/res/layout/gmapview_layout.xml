<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/clearmapview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空mapview"
        android:visibility="gone" />

    <include
        android:id="@+id/title_top"
        layout="@layout/header" />

    <com.amap.api.maps2d.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_top" />

    <com.bohui.widget.ImageViewGif
        android:id="@+id/img_test"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/map_tv_weixing_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="@string/btn_wx" />

        <TextView
            android:id="@+id/map_tv_normal_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_et"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/btn_dl" />
        <TextView
            android:id="@+id/map_tv_tomylocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_et"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/to_my_location" />
    </LinearLayout>
</RelativeLayout>