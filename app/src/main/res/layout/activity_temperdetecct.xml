<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/header_property_room"
        layout="@layout/header"
        android:visibility="visible"/>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart2"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:layout_height="300dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/gad_close_height"
            android:layout_marginTop="@dimen/assembly_margin"
            android:textColor="@color/theme_color"
            android:gravity="center"
            android:text="岗运2449线分布式温度"
            android:textSize="@dimen/entirety_textSize"
            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/split_line_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/temperature_size"
            android:text="@string/temp"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/faulteta_tvmargin"
            android:visibility="gone"
            android:textSize="@dimen/textSize"
            android:textColor="@color/theme_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gad_close_height"
            android:layout_marginTop="@dimen/login_etMargin"
            android:visibility="gone"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/iv_temperature"
                    android:layout_height="@dimen/iv_temperature"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/menu_rightivSize"
                    android:background="@drawable/yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/iv_1"
                    android:layout_marginLeft="@dimen/faulteta_tvmargin"
                    android:textSize="@dimen/textSize"
                    android:text="@string/phase_distribution"/>
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/small_space"
                android:layout_marginBottom="@dimen/small_space"
                android:background="@color/split_line_bg"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="@dimen/iv_temperature"
                    android:layout_height="@dimen/iv_temperature"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/menu_rightivSize"
                    android:background="@drawable/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/iv_2"
                    android:layout_marginLeft="@dimen/faulteta_tvmargin"
                    android:textSize="@dimen/textSize"
                    android:text="@string/phase_distribution"/>
            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/small_space"
                android:layout_marginBottom="@dimen/small_space"
                android:visibility="gone"
                android:background="@color/split_line_bg"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="@dimen/iv_temperature"
                    android:layout_height="@dimen/iv_temperature"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/menu_rightivSize"
                    android:background="@drawable/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/iv_3"
                    android:layout_marginLeft="@dimen/faulteta_tvmargin"
                    android:textSize="@dimen/textSize"
                    android:text="@string/phase_distribution"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/login_etMargin"
            android:visibility="gone"
            android:background="@color/split_line_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cb_width">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/assembly_margin"
                android:text="@string/current_value"
                android:textColor="@color/tv_menu_color"
                android:textSize="@dimen/textSize"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/split_line_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cb_width">
            <ImageView
                android:id="@+id/iv_updating1"
                android:layout_width="@dimen/iv_temperature"
                android:layout_height="@dimen/iv_temperature"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/assembly_margin"
                android:background="@drawable/yellow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_updating1"
                android:text="南山区A相分布温度"
                android:textColor="@color/tv_theme_color"
                android:textSize="@dimen/textSize" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/assembly_margin"
                android:layout_alignParentRight="true"
                android:text="21.0"
                android:textColor="@color/tv_theme_color"
                android:textSize="@dimen/textSize" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/split_line_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cb_width">
            <ImageView
                android:id="@+id/iv_updating2"
                android:layout_width="@dimen/iv_temperature"
                android:layout_height="@dimen/iv_temperature"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/assembly_margin"
                android:background="@drawable/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_updating2"
                android:text="南山区A相分布温度"
                android:textColor="@color/tv_theme_color"
                android:textSize="@dimen/textSize" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/assembly_margin"
                android:layout_alignParentRight="true"
                android:text="21.0"
                android:textColor="@color/tv_theme_color"
                android:textSize="@dimen/textSize" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/split_line_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cb_width">
            <ImageView
                android:id="@+id/iv_updating"
                android:layout_width="@dimen/iv_temperature"
                android:layout_height="@dimen/iv_temperature"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/assembly_margin"
                android:background="@drawable/red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_updating"
                android:text="南山区A相分布温度"
                android:textColor="@color/tv_theme_color"
                android:textSize="@dimen/textSize" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/assembly_margin"
                android:layout_alignParentRight="true"
                android:text="21.0"
                android:textColor="@color/tv_theme_color"
                android:textSize="@dimen/textSize" />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
