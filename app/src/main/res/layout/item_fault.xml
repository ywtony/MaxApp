<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f0f0f0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/tv_title_color"
                android:text="@string/fault_type"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/fault_lever"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_title_color"
                android:textSize="12sp"
                android:text="@string/fault_level"/>
            <View
                android:id="@+id/v_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/split_line_bg"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="56dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tv_faultData"
            android:lineSpacingExtra="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_title_color"
            android:textSize="@dimen/remark_textSize"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/split_line_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/tips_icon_time"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_title_color"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/iv_time"
                android:layout_marginLeft="3dp"
                android:text="2018.02.01 16:01:02"
                />
            <RelativeLayout
                android:id="@+id/rel_cleargaojing"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/rel_dingwei"
                android:layout_marginRight="15dp"
                android:background="@drawable/read_button">
                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/item_tv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_clear"
                    android:textColor="@color/theme_color"
                    android:textSize="12sp"
                    android:text="确认告警"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_dingwei"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/read_button">
                <ImageView
                    android:id="@+id/iv_dw"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_dw"
                    android:textColor="@color/theme_color"
                    android:textSize="12sp"
                    android:text="@string/location"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f0f0f0"/>

    </LinearLayout>


</LinearLayout>
