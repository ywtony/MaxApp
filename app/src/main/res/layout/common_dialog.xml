<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="160dp"
        android:padding="1px"
        android:background="@drawable/dialog_bg"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="11dp"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/ic_close_main_24dp"/>

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_close"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/t333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_tv_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="是否要解除绑定！"
            android:textColor="@color/t333"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/dialog_qushouye"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/dialog_btn_gray"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/dialog_quguanzhu"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/dialog_btn_main"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>