<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/header_property_room"
        layout="@layout/header" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_header_height"
        android:background="@color/bg_header">
        <com.bohui.widget.CircleImageView
            android:id="@+id/iv_header"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/iv_header_height"
            android:layout_height="@dimen/iv_header_height"
            android:src="@drawable/test"
            android:layout_marginLeft="@dimen/me_header_margin"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_header"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/remark_textSize"
            android:layout_marginLeft="@dimen/me_text_margin"
            android:text="JackFire"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_syn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/faul_samllinterval"
        android:layout_height="@dimen/me_item_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_syn"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@drawable/iv_syn"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_syn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_syn"
            android:text="@string/synopsis"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:id="@+id/iv_collect_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/interval_marginLeft"
            android:layout_alignParentBottom="true"
            android:background="@color/split_line_bg" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_item_height"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@drawable/feedback"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_feedback"
            android:text="@string/propert_feedback"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />
    </RelativeLayout>
   
    <RelativeLayout
        android:id="@+id/rl_aboutus"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/fault_rl_margin"
        android:layout_height="@dimen/me_item_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_aboutus"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@drawable/aboutus"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_aboutus"
            android:text="@string/about"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/interval_marginLeft"
            android:layout_alignParentBottom="true"
            android:background="@color/split_line_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_caching"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_caching"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@drawable/clearcache"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_caching"
            android:text="@string/scavenging_caching"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/iv_right"
            android:text="0b"
            android:textColor="@color/tv_menu_color"
            android:textSize="@dimen/remark_textSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/interval_marginLeft"
            android:background="@color/split_line_bg" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_item_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_version"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@drawable/updating"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_version"
            android:text="@string/ez_current_version"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:id="@+id/iv_versionRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />
        <TextView
            android:id="@+id/tv_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/version_margin"
            android:layout_toLeftOf="@+id/iv_versionRight"
            android:text="1.0.0"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/remark_textSize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/interval_marginLeft"
            android:layout_alignParentBottom="true"
            android:background="@color/split_line_bg" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_updating"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_item_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_updating"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@drawable/update"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_updating"
            android:text="@string/detection_update"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_deviceid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_item_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_deviceid"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@mipmap/icon_deviceid"
            android:clickable="true" />

        <TextView
            android:id="@+id/tvde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_deviceid"
            android:text="@string/deviceid"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:id="@+id/iv_versiondeviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />
        <TextView
            android:id="@+id/tv_current_deviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/version_margin"
            android:layout_toRightOf="@+id/tvde"
            android:layout_marginStart="5dp"
            android:layout_toLeftOf="@+id/iv_versiondeviceid"
            android:text=""
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/remark_textSize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/interval_marginLeft"
            android:layout_alignParentBottom="true"
            android:background="@color/split_line_bg" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_downloadresource"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_item_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_downloadresource"
            android:layout_width="@dimen/iv_me_ItemSize"
            android:layout_height="@dimen/iv_me_ItemSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_header_marginLeft"
            android:background="@mipmap/icon_update_resource"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin_iv"
            android:layout_toRightOf="@+id/iv_downloadresource"
            android:text="@string/ll_type100"
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/entirety_textSize" />

        <ImageView
            android:id="@+id/iv_versiondownloadresource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_header_marginRight"
            android:background="@drawable/tv_icon_arrow_right" />
        <TextView
            android:id="@+id/tv_current_downloadresource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/version_margin"
            android:layout_toLeftOf="@+id/iv_versiondownloadresource"
            android:text=""
            android:textColor="@color/tv_theme_color"
            android:textSize="@dimen/remark_textSize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/interval_marginLeft"
            android:layout_alignParentBottom="true"
            android:background="@color/split_line_bg" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_exit_logon"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/bt_marginTop"
        android:layout_height="@dimen/bt_height"
        android:layout_marginLeft="@dimen/bt_marginLeft"
        android:layout_marginRight="@dimen/bt_marginLeft"
        android:background="@drawable/logout_btn_bg"
        android:text="@string/exit_logon"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/topbar_textSize" />



</LinearLayout>
