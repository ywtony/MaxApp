<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_menu_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp">


            <RadioGroup
                android:id="@+id/rg_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radiogroup_height"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_home"
                    style="@style/main_tab"
                    android:checked="true"
                    android:drawableTop="@drawable/tab_selector_home"
                    android:text="@string/menu_home" />


                <RadioButton
                    android:id="@+id/rb_enuequipement"
                    style="@style/main_tab"
                    android:drawableTop="@drawable/tab_selector_message"
                    android:text="@string/menu_enuequipement" />
                <RadioButton
                    android:id="@+id/rb_submitgj"
                    style="@style/main_tab"
                    android:drawableTop="@drawable/tab_selector_xunjian"
                    android:text="@string/menu_submitgj" />

                <RadioButton
                    android:id="@+id/rb_me"
                    style="@style/main_tab"
                    android:drawableTop="@drawable/tab_selector_me"
                    android:text="@string/menu_me" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="80dp"
                >

                <TextView
                    android:id="@+id/main_tv_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:layout_marginLeft="35dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="9sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginRight="@dimen/drawerlayout_margin"
        android:choiceMode="singleChoice">

        <include layout="@layout/layout_menu" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
