<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header_property_public"
        layout="@layout/header" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    <EditText
                android:id="@+id/et_comment_content_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/opinion"
                android:maxLength="200"
                android:layout_margin="@dimen/text_marginRight"
                android:background="@null"
                android:hint="@string/opinion"
                android:gravity="left"
                android:textColor="@color/tv_title_color"
                android:textSize="@dimen/entirety_textSize"
                android:lineSpacingExtra="@dimen/faulteta_tvmargin"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5" />
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gad_close_height"
        android:layout_marginLeft="@dimen/drawerlayout_margin"
        android:layout_marginRight="@dimen/drawerlayout_margin"
        android:background="@drawable/corners_btn_bg"
        android:text="@string/propert_submit_feedback"
        android:layout_marginTop="@dimen/gad_close_height"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/topbar_textSize" />

</LinearLayout>
