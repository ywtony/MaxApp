<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_itemHeight">
        <ImageView
            android:id="@+id/iv_project"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@drawable/camera"
            />
        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_project"
            android:layout_marginLeft="@dimen/login_etMargin"
            android:textSize="@dimen/entirety_textSize"
            android:textColor="@color/tv_theme_color"
            android:text="第一段"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/split_line_bg"/>


    </RelativeLayout>


</LinearLayout>
