<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_data"
        android:layout_height="@dimen/fault_item_height">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:background="@color/split_line_bg"/>
        <RelativeLayout
            android:id="@+id/rl_temperature"
            android:layout_width="@dimen/fault_Ivheight"
            android:layout_height="@dimen/fault_Ivheight"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_temperature"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_temperature"
            android:layout_marginLeft="@dimen/tv_margin">
            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_title_color"
                android:textSize="@dimen/textSize"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_temperature"
                android:layout_marginTop="1dp"
                android:textColor="@color/tv_title_color"
                android:textSize="@dimen/textSize"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/tv_margin"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_title_color"
            android:textSize="@dimen/remark_textSize"/>
    </RelativeLayout>


</LinearLayout>
