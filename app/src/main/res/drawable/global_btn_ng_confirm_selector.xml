<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- unpressed -->
    <item android:color="@color/white" android:state_enabled="false" android:state_pressed="false">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="5dp" />
            <stroke android:color="#e0e0e0" android:width="0.5dp"/>
        </shape>
    </item>
    <item android:color="@color/white" android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="5dp" />
            <stroke android:color="#b5b5b5" android:width="0.5dp"/>
        </shape>
    </item>

    <!-- pressed -->
    <item android:color="@color/white" android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="5dp" />
            <stroke android:color="@color/add_cb_sel" android:width="0.5dp"/>

        </shape>
    </item>
</selector>